{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Demo App Helm Chart Values",
  "type": "object",
  "properties": {
    "replicaCount": {
      "type": "integer",
      "default": 2,
      "minimum": 1
    },
    "image": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string"
        },
        "pullPolicy": {
          "type": "string",
          "enum": ["Always", "Never", "IfNotPresent"]
        },
        "tag": {
          "type": "string"
        }
      },
      "required": ["repository", "tag"]
    },
    "clusterName": {
      "type": "string",
      "default": "local"
    },
    "service": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer"]
        },
        "port": {
          "type": "integer",
          "default": 80
        },
        "global": {
          "type": "boolean",
          "default": false,
          "description": "Enable Cilium Global Service annotation"
        }
      }
    },
    "mcs": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Kubernetes Multi-Cluster Service API (ServiceExport)"
        }
      }
    },
    "gateway": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "name": {
          "type": "string",
          "default": "cilium-gateway"
        },
        "namespace": {
          "type": "string",
          "default": "kube-system"
        },
        "hostname": {
          "type": "string"
        },
        "mcsHostname": {
          "type": "string"
        },
        "headlessHostname": {
          "type": "string"
        }
      }
    }
  }
}
